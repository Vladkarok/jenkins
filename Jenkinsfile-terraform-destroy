pipeline {
    agent { label '1' }

    environment {
        AWS_ACCESS_KEY_ID        = credentials('TERRAFORM_AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY    = credentials('TERRAFORM_AWS_SECRET_ACCESS_KEY')
    }

    tools {
        terraform 'Terraform'
    }

    stages {
        
        stage('Slack initial message') {
            steps {
                slackSend color: 'blue', message: "> *Start pipeline*: ${BUILD_TAG} ${JOB_NAME} ${NODE_NAME}"
            }
        }
        
        stage('Git checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-ssh', url: 'git@github.com:Vladkarok/terraform-geocit-aws.git'
            }
        }
        stage('Terraform init') {
            steps{
                sh 'terraform init';
                sh 'terraform validate';
            }
        }
        stage('Terraform destroy') {
            steps{
                sh 'terraform destroy -auto-approve'
            }
        }
        
        stage('Slack initial message') {
            steps {
                slackSend color: 'blue', message: "${currentBuild.durationString}"
                slackSend color: 'blue', message: "${currentBuild.currentResult}" 
            }
        }
        
    }
}
